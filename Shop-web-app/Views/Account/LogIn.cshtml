@model Shop_web_app.Models.LogIn
<h2>Log In</h2>

@using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
{
    @Html.ValidationSummary()
    ;

    <span>Login: </span> @Html.TextBoxFor(x => x.UserName)
    <span>Password: </span> @Html.TextBoxFor(x => x.Password)

    <button type="submit">Log In</button>
}